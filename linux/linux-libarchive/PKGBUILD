pkgname=linux-libarchive
_pkgname=libarchive
pkgver=2.7.1
pkgrel=1
pkgdesc='library that can create and read several streaming archive formats'
url='http://libarchive.org/'
license=('BSD')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-zlib' 'linux-bzip2' 'linux-xz' 'linux-acl' 'linux-openssl')
source=("http://gav17.no-ip.org/ftp/archlinux/current/os/i386/${_pkgname}-${pkgver}-1-i386.pkg.tar.gz")
md5sums=('9daa87c9417acb61d6c9ed8312d28ec3')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
