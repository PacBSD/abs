pkgname=linux-readline
_pkgname=readline
pkgver=6.0.004
pkgrel=1
pkgdesc='Linux GNU readline library'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-glibc' 'linux-ncurses')
source=("http://mirror.lzjtu.edu.cn/archlinux/core/os/i686//${_pkgname}-${pkgver}-1-i686.pkg.tar.gz")
md5sums=('307fb2d34f753467e10c4aee62419cab')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
