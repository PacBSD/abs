pkgname=linux-findutils
_pkgname=findutils
pkgver=4.4.2
pkgrel=2
pkgdesc='GNU utilities to locate files'
url='http://www.gnu.org/software/findutils'
license=('GPL3')
arch=('any')
options=('!strip' '!fbsd10fix')
groups=('linux-base' 'linux-base-devel')
depends=('linux-glibc' 'linux-texinfo')
source=("http://mirror.lzjtu.edu.cn/archlinux/core/os/i686//${_pkgname}-${pkgver}-1-i686.pkg.tar.gz")
md5sums=('946ae4ad9d7beed73782f3a8d7889852')
install="findutils.install"

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
