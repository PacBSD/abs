pkgname=linux-grep
_pkgname=grep
pkgver=2.5.4
pkgrel=1
pkgdesc='A string search utility'
url='http://www.gnu.org/software/grep/grep.html'
license=('GPL3')
arch=('any')
options=('!strip' '!fbsd10fix')
groups=('linux-base' 'linux-base-devel')
depends=('linux-glibc' 'linux-pcre' 'linux-bash')
source=("http://mirror.lzjtu.edu.cn/archlinux/core/os/i686//${_pkgname}-${pkgver}-3-i686.pkg.tar.gz")
md5sums=('0c28914fe078b2e52466f4a35acc0084')
install=grep.install

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
