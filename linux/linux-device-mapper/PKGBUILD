pkgname=linux-device-mapper
_pkgname=device-mapper
pkgver=2.02.53
pkgrel=2
pkgdesc='Device mapper userspace library and tools'
url='http://sourceware.org/dm/'
license=('GPL2')
arch=('any')
options=('!strip' '!fbsd10fix')
groups=('linux-base')
depends=('linux-glibc' 'linux-ncurses' 'linux-readline')
source=("http://gav17.no-ip.org/ftp/archlinux/current/os/i386/${_pkgname}-${pkgver}-1-i386.pkg.tar.gz")
md5sums=('b685a0cceec6468c623240ef56b3a569')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
	for file in dmsetup.static dmsetup; do
		chmod 655 ${srcdir}/sbin/${file}
	done
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
