pkgname=linux-python24
_pkgname=python24
pkgver=2.4.6
pkgrel=4
pkgdesc="A high-level scripting language"
license=('PSF')
url="http://www.python.org/"
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-glibc' 'linux-libx11' 'linux-tcl' 'linux-bzip2' 'linux-openssl' 'linux-tk'
	 'linux-db' 'linux-gcc-libs' 'linux-gdbm' 'linux-ncurses' 'linux-readline' )
source=("http://mirror.lzjtu.edu.cn/archlinux/extra/os/i686/${_pkgname}-${pkgver}-2-i686.pkg.tar.gz")
md5sums=('f0743f7f2e6128ab54ccde1ee180356a')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
    cd ${srcdir}

    find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
    find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

}
