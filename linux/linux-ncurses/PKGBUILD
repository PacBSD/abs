pkgname=linux-ncurses
_pkgname=ncurses
pkgver=5.7
pkgrel=2
pkgdesc='Linux System V Release 4.0 curses emulation library'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
options=('!strip' '!fbsd10fix')
depends=('linux-glibc')
source=("http://gav17.no-ip.org/ftp/archlinux/current/os/i386/${_pkgname}-${pkgver}-2-i386.pkg.tar.gz")
md5sums=('c4740e92ae4946d2dd4febb6ee686321')

prepare() {
	rm -f "${srcdir}"/*.pkg.tar.gz
}

build() {
    find ${srcdir}/bin ${srcdir}/sbin/ ${srcdir}/usr/bin \
         ${srcdir}/usr/sbin \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
          | xargs brandelf -t linux
}

package() {
   cd ${srcdir}

   find * -type d -exec mkdir -p "${pkgdir}/compat/linux/{}" \;
   find * ! -type d | cpio -pm -R root:wheel ${pkgdir}/compat/linux

   cd ${pkgdir}/compat/linux/usr/lib/
   ln -s libncurses.so.5 libtinfo.so.5
}
