	# 1.12.12-2:	# 29 Passed, 464 Failed [460 crashed, 2 expected], 26 Skipped
	# 1.12.16-1:	144 Passed, 364 Failed [6 crashed, 12 expected], 27 Skipped

#}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}

