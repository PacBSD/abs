# $Id: PKGBUILD 175889 2013-01-23 11:37:31Z jgc $
# Maintainer: Anthony Donnelly <Amzo@Archbsd.net>

pkgname=cairo
pkgver=1.14.2
pkgrel=7
pkgdesc="Cairo vector graphics library"
arch=('i386' 'amd64')
license=('LGPL' 'MPL')
url="http://cairographics.org/"
depends=('libpng' 'libxrender' 'libxext' 'fontconfig' 'pixman>=0.28.0' 'glib2' 'mesa' 'libgl')
makedepends=('mesa-libgl' 'librsvg' 'gtk2' 'poppler-glib' 'libspectre' 'gtk-doc' 'valgrind'
             # for the test suite:
             'ttf-dejavu' 'gsfonts' 'xorg-server-xvfb' ) # 'libdrm')
#optdepends=('xcb-util: for XCB backend') # really needed?
provides=('cairo-xcb')
replaces=('cairo-xcb')
options=('libtoolfix')
source=(http://cairographics.org/releases/$pkgname-$pkgver.tar.xz)
sha1sums=('c8da68aa66ca0855b5d0ff552766d3e8679e1d24')

build() {
	cd "$srcdir/$pkgname-$pkgver"
  
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-tee \
		--enable-gl \
		--enable-egl \
		--enable-svg \
		--enable-ps \
		--enable-pdf \
		--enable-gobject
	make
}

