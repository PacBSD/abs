# $Id: PKGBUILD 157821 2012-04-30 04:19:32Z foutrelis $
# Maintainer: Anthony Donnelly <Amzo@PacBSD.org>

pkgname=libxfce4util
pkgver=4.12.1
pkgrel=2
pkgdesc="Basic utility non-GUI functions for Xfce"
arch=('i386' 'amd64')
url="http://www.xfce.org/"
license=('GPL2')
depends=('glib2')
makedepends=('pkgconf' 'intltool' 'gtk-doc' 'gio-fam')
source=(http://archive.xfce.org/src/xfce/$pkgname/4.12/$pkgname-$pkgver.tar.bz2)
sha256sums=('876bdefa2e13cbf68b626b2158892fb93e824e1ef59cf951123a96cefbc8881d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/libexec \
    --localstatedir=/var \
    --disable-static \
    --disable-debug
  gmake
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  gmake DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
