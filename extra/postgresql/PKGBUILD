pkgbase=postgresql
pkgname=('postgresql-libs' 'postgresql')
pkgver=9.4.5
_majorver=${pkgver%.*}
pkgrel=1
arch=('i386' 'amd64')
url="http://www.postgresql.org/"
license=('custom:PostgreSQL')
makedepends=('libxml2' 'python2' 'perl' 'tcl>=8.6.0')
patchdir="postgresql-${pkgver}"
source=(http://ftp.postgresql.org/pub/source/v${pkgver}/postgresql-${pkgver}.tar.bz2
postgresql-run-socket.patch
postgresql.pampostgresql.logrotate
postgresql.servicepostgresql.tmpfiles.conf postgresql-check-db-dir)
