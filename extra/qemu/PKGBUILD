               'patch-ui-gtk.c'
               'patch-vl.c-serial'
               'patch-x_keymap.c'
               'pcap-patch'
               )
source=(http://wiki.qemu.org/download/${pkgname}-${pkgver}.tar.bz2
        65-kvm.rules
        'qemu-ifdown.sample'
        'qemu-ifup.sample'
        ${_port_patches[@]})
replaces=('qemu-kvm')
options=(!strip)

