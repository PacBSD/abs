depend() {
	need dbus
	after bootmisc
}

start() {
	ebegin "Starting Hardware Abstraction Layer daemon"
	start-stop-daemon --start -q --exec /usr/sbin/hald --
	eend $?
}

stop() {
	ebegin "Stopping Hardware Abstraction Layer daemon"
	start-stop-daemon --stop -q --pidfile /var/run/hald/hald.pid 
	eend $?
}
