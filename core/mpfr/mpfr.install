info_dir=usr/share/info

post_install() {
    [ -x usr/local/bin/install-info ] || return 0
    install-info ${info_dir}/mpfr.info.gz ${info_dir}/dir
}

post_upgrade() {
    post_install $1
}

pre_remove() {
    [ -x usr/local/bin/install-info ] || return 0
    install-info --delete ${info_dir}/mpfr.info.gz ${info_dir}/dir
}
