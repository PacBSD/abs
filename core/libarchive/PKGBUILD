# $Id: PKGBUILD 167058 2012-09-25 03:07:21Z allan $
# Maintainer: Dan McGee <dan@archlinux.org>
# Contributor: Wolfgang Bumiller <blub@speed.at>

pkgname=libarchive
pkgver=3.1.2
pkgrel=9
pkgdesc="library that can create and read several streaming archive formats"
arch=('i686' 'x86_64')
url="http://libarchive.googlecode.com/"
license=('BSD')
depends=('pkgconf')
source=("http://www.libarchive.org/downloads/${pkgname}-${pkgver}.tar.gz"
	0001-mtree-fix-line-filename-length-calculation.patch
	libarchive-archive_acl.c-fix-empty-default-acl.patch)
md5sums=('efad5a503f66329bb9d2f4308b5de98a'
         '73e0e2fe9dafe4851bcc2b4bf2fa6194'
         '7426d41c66f9cc23a857fb893265f651')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  unset CFLAGS CXXFLAGS LDFLAGS CC CXX CPP
  export CC=gcc CXX=g++ CPP=cpp

  CFLAGS="${CFLAGS} -DHAVE_BSDXML_H=1"
  LDFLAGS="${LDFLAGS} -lbsdxml"

  patch -p0 -i ../0001-mtree-fix-line-filename-length-calculation.patch
  patch -p0 -i ../libarchive-archive_acl.c-fix-empty-default-acl.patch

  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --mandir=/usr/share/man \
              --infodir=/usr/share/info \
              --with-openssl --without-nettle \
              --without-expat
  gmake
}

#check() {
#  cd "$srcdir/$pkgname-$pkgver"
#  gmake check
#}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  gmake DESTDIR="$pkgdir" install

  install -d -m755 "$pkgdir"/usr/share/licenses/${pkgname}/COPYING
  install -m644 COPYING "$pkgdir"/usr/share/licenses/${pkgname}/COPYING

  cd "${pkgdir}/usr/bin/"
  ln -s bsdcpio cpio

}
